<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/child_gradient_blue"
    android:padding="12dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#FFFFFFFF"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/back"
                android:background="@drawable/bg_tab_item"
                app:tint="#1976D2"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/snake_math_title"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:textSize="20sp"
                android:gravity="center" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Блок статуса: Уровень + Таймер -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#B9FFFFFF"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уровень 1"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:textSize="18sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/timerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00.0"
                android:textStyle="bold"
                android:textColor="#00695C"
                android:textSize="18sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.timursarsembayev.danabalanumbers.SnakeMathGameView
        android:id="@+id/snakeMathGameView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"/>

    <!-- Джойстик: один ряд из 4 квадратных кнопок -->
    <LinearLayout
        android:id="@+id/joystickContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btnLeft"
            android:layout_width="102dp"
            android:layout_height="82dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="⬅️"
            android:textSize="48sp"
            android:layout_marginStart="-15dp"
            android:layout_marginEnd="-15dp"/>

        <Button
            android:id="@+id/btnRight"
            android:layout_width="102dp"
            android:layout_height="82dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="➡️"
            android:textSize="48sp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="-15dp"/>

        <Button
            android:id="@+id/btnUp"
            android:layout_width="102dp"
            android:layout_height="82dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="⬆️"
            android:textSize="48sp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="-15dp"/>

        <Button
            android:id="@+id/btnDown"
            android:layout_width="102dp"
            android:layout_height="82dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:includeFontPadding="false"
            android:gravity="center"
            android:text="⬇️"
            android:textSize="48sp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="-15dp"/>
    </LinearLayout>

</LinearLayout>
