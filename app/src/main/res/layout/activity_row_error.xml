<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/child_gradient_blue"
    android:padding="12dp"
    tools:context=".RowErrorActivity">

    <!-- Header with Back Button (уменьшен по высоте) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Назад"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🧩"
            android:textSize="28sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/questionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Где ошибка в последовательности?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1565C0" />

    </LinearLayout>

    <!-- Progress Bar (меньше отступ) -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginBottom="12dp"
        android:progress="0"
        android:progressTint="#4CAF50" />

    <!-- Number Row Card (компактнее) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/sequenceCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:id="@+id/cell1"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@drawable/draggable_number_card"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/cell2"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/draggable_number_card"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/cell3"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/draggable_number_card"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/cell4"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/draggable_number_card"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/cell5"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/draggable_number_card"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/cell6"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="@drawable/draggable_number_card"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#333333" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Hint (меньше отступы и размер) -->
    <TextView
        android:id="@+id/hintText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Найди ошибку в ряду"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:padding="8dp"
        android:background="@drawable/hint_background" />

    <!-- Buttons (ниже по высоте) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/checkButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:text="Проверить"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_check"
            android:elevation="4dp" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:text="Далее"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_next"
            android:elevation="4dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
