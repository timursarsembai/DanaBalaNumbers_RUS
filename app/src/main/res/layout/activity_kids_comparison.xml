<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/child_gradient_blue"
    android:padding="12dp"
    tools:context=".KidsComparisonActivity">

    <!-- Header with Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Назад"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚖️"
            android:textSize="24sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/questionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="У кого предметов больше?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1565C0" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="6dp"
            android:progress="0"
            android:progressTint="#4CAF50" />

    </LinearLayout>

    <!-- Main Comparison Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- Left Card (Boy/Girl) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/leftCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Row: person + number square -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/leftPersonDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👦"
                        android:textSize="42sp" />

                    <TextView
                        android:id="@+id/leftNumberDisplay"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/number_square_bg"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#0D47A1"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Objects line(s) -->
                <TextView
                    android:id="@+id/leftObjectsDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🍎🍎🍎"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="3"
                    android:ellipsize="none"
                    android:scrollHorizontally="false" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Center symbol -->
        <TextView
            android:id="@+id/centerSymbol"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/number_drop_zone"
            android:gravity="center"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginHorizontal="8dp" />

        <!-- Right Card (Boy/Girl) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/rightCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Row: person + number square -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/rightPersonDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="👧"
                        android:textSize="42sp" />

                    <TextView
                        android:id="@+id/rightNumberDisplay"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/number_square_bg"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#0D47A1"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Objects line(s) -->
                <TextView
                    android:id="@+id/rightObjectsDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🍎🍎🍎🍎"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="3"
                    android:ellipsize="none"
                    android:scrollHorizontally="false" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Bottom Area with Hint and Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hint Text -->
        <TextView
            android:id="@+id/hintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Нажми на карточку"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:background="@drawable/hint_background" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/equalButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Одинаково"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_check"
                android:elevation="4dp" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Далее"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_next"
                android:elevation="4dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
