<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тень от кнопки -->
    <item android:top="3dp">
        <shape android:shape="oval">
            <size android:width="64dp" android:height="64dp"/>
            <solid android:color="#33000000"/>
        </shape>
    </item>

    <!-- Корпус: градиент вокруг #6987A3 -->
    <item>
        <shape android:shape="oval">
            <size android:width="64dp" android:height="64dp"/>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#8EA5BA"
                android:centerColor="#6987A3"
                android:endColor="#4F6881"/>
            <stroke android:width="1dp" android:color="#40FFFFFF"/>
        </shape>
    </item>

    <!-- Внутренний световой кант (лёгкая фаска) -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="oval">
            <size android:width="62dp" android:height="62dp"/>
            <solid android:color="#00000000"/>
            <stroke android:width="1dp" android:color="#26FFFFFF"/>
        </shape>
    </item>

    <!-- Верхний радиальный блик (не сплошной диск) -->
    <item android:bottom="36dp">
        <shape android:shape="oval">
            <size android:width="64dp" android:height="28dp"/>
            <gradient
                android:type="radial"
                android:centerX="0.5"
                android:centerY="0.2"
                android:gradientRadius="36dp"
                android:startColor="#B3FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>

    <!-- Нижняя внутренняя тень для объёма -->
    <item android:top="42dp">
        <shape android:shape="oval">
            <size android:width="64dp" android:height="22dp"/>
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#00000000"
                android:endColor="#33000000"/>
        </shape>
    </item>
</layer-list>
