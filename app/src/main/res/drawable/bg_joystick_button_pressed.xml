<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Вдавленное состояние: темнее базового #6987A3 -->
    <item>
        <shape android:shape="oval">
            <size android:width="64dp" android:height="64dp"/>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#5E7893"
                android:centerColor="#4F6881"
                android:endColor="#3A5066"/>
            <stroke android:width="1dp" android:color="#66FFFFFF"/>
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
        </shape>
    </item>

    <!-- Уменьшенный верхний блик для нажатого состояния -->
    <item android:bottom="38dp">
        <shape android:shape="oval">
            <size android:width="64dp" android:height="26dp"/>
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#66FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>
</layer-list>
